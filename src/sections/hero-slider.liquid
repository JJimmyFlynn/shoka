<section class="hero-slider index-section" data-section-type="hero-slider" data-section-id="{{ section.id }}">
  <div id="heroSlider" class="hero-slider__inner slider-loading">
  
  {% comment %}
  ------------------------------------------------------------------------------
  Hero slider slides loop
  ------------------------------------------------------------------------------
  {% endcomment %}
  {% for block in section.blocks %}
    <div class="hero-slide hero-slide--{{ block.id }} is-lazyloaded lazyload" 
    data-bgset="{% include 'bg-set', image: block.settings.slide_image %}"  
    data-sizes="auto" 
    data-parent-fit="cover" {{ block.shopify_attributes }}>
      <div class="hero-slide__overlay">
        <div class="container">
          <h2 class="hero-slide__heading">{{ block.settings.slide_heading }}</h2>
          <h3 class="hero-slide__sub-heading">{{ block.settings.slide_sub_heading }}</h3>
          <div class="hero-slide__cta">
            <a href="{{ block.settings.slide_button_link }}" class="button button--primary">{{ block.settings.slide_button_text }}</a>
          </div>
          {% comment %} /__cta {% endcomment %}
        </div>
        {% comment %} /.container {% endcomment %}
      </div>
      {% comment %} /__overlay {% endcomment %}
    </div>
    {% comment %} /.hero-slide {% endcomment %}
  {% endfor %}
  </div>
  {% comment %} /__inner {% endcomment %}
  
  {% comment %}
  ------------------------------------------------------------------------------
  Hero slider dots navigation
  ------------------------------------------------------------------------------
  {% endcomment %}
  <div class="hero-slider__dots" id="heroSliderDots">

  </div>
  {% comment %} /__dots {% endcomment %}
</section>

{% schema %}
  {
    "name": "Hero Slider",
    "max_blocks": 4,
    "settings": [],
    "blocks": [
      {
        "type": "Slide",
        "name": "Slide",
        "settings": [
          {
            "id": "slide_image",
            "type": "image_picker",
            "label": "Slide Image"
          },
          {
            "id": "slide_heading",
            "type": "text",
            "label": "Slide Heading"
          },
          {
            "id": "slide_sub_heading",
            "type": "text",
            "label": "Slide Sub-Heading"
          },
          {
            "id": "slide_button_link",
            "type": "url",
            "label": "Slide Button Link"
          },
          {
            "id": "slide_button_text",
            "type": "text",
            "label": "Slide Button Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Slider",
        "category": "Carousel"
      }
    ]
  }
{% endschema %}