<div class="page-wrapper">
  <article class="container container--small single-page">
    <header class="page-header collection-header">
      <h1 class="page-header__title">{{ page.title }}</h1>
    </header>

    <div class="rte page-content">
      {{ page.content }}
    </div>
    {% comment %} /.page-content {% endcomment %}
  </article>
</div>
{% comment %} /.page-wrapper {% endcomment %}
