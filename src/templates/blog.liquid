<section class="blog">
  <div class="container">

    {% comment %}
    ------------------------------------------------------------------------------
    Breadcrumbs
    ------------------------------------------------------------------------------
    {% endcomment %}
    <div class="breadcrumbs">
      <a href="{{ shop.url }}" class="breadcrumbs__link">Home</a>
      <span class="breadcrumbs__arrow">{% include 'icon-arrow-right' %}</span>
      <a href="{{ blog.url }}" class="breadcrumbs__link">{{ blog.title }}</a>
    </div>
    {% comment %} /.breadcrumbs {% endcomment %}

    {% comment %}
    ------------------------------------------------------------------------------
    Page Header
    ------------------------------------------------------------------------------
    {% endcomment %}
    <header class="page-header">
      <h1 class="page-header__title">{{ blog.title }}</h1>
    </header>
  </div>
  {% comment %} /.container {% endcomment %}

  <div class="blog__list">
    <div class="container">
      {% paginate blog.articles by 12 %}
        <div class="flexgrid flexgrid--guttered">
          {% for article in blog.articles %}
            {% include 'article-card' %}
          {% endfor %}
        </div>
        {% comment %} /.flexgrid {% endcomment %}

        {% comment %}
        ------------------------------------------------------------------------------
        Pagination
        ------------------------------------------------------------------------------
        {% endcomment %}
        {% if paginate.pages > 1 %}
          <div class="pagination-wrapper collection-pagination">
            {{ paginate | default_pagination: next: "Next", previous: "Previous" }}
          </div>
        {% comment %} /.pagination-wrapper {% endcomment %}
        {% endif %}
      {% endpaginate %}
    </div>
    {% comment %} /.container {% endcomment %}
  </div>
  {% comment %} /.blog__list {% endcomment %}
</section>
